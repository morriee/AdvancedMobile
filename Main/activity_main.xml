<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/text"
            android:textSize="24dp"
            android:text="Please turn on the GPS!"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/dateLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/Time"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="145dp"
                android:gravity="center"
                android:text="Now Times"
                android:textColor="#fff"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/Temperature"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:textSize="25dp"
                android:text="기온" />

            <TextView
                android:id="@+id/Finedust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="미세먼지"
                android:textColor="#fff"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/icon_snow" />



        <TextView
            android:id="@+id/Ozone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="오존농도"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_below="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textSize="18dp"
            android:id="@+id/ment"
            android:textColor="#fff"
            android:paddingLeft="13dp"
            android:lineSpacingMultiplier = "1.1"
            android:lineSpacingExtra = "8dp"
            android:paddingRight="13dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/btm_menu"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:text="Feed"
            android:id="@+id/feed_btn"
            android:onClick="onClick"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Calendar"
            android:textColor="#fff"
            android:id="@+id/calendar_btn"
            android:onClick="onClick"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Memo"
            android:textColor="#fff"
            android:id="@+id/memo_btn"
            android:onClick="onClick"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Diary"
            android:id="@+id/diary_btn"
            android:onClick="onClick"
            android:textColor="#fff"
            android:gravity="center"
            android:clickable="true"/>
    </LinearLayout>



</RelativeLayout>
